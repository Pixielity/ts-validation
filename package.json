{
  "name": "@pixielity/ts-validation",
  "version": "0.1.0",
  "description": "A utility library for creating mapped types in TypeScript with support for class-validator and class-transformer metadata inheritance",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"**/*.ts\"",
    "format": "prettier --write \"**/*.ts\"",
    "docs": "typedoc --out docs src",
    "prepare-husky": "husky",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "changeset": "changeset",
    "version-packages": "changeset version && git add . && git commit -m \"Version Packages\"",
    "release": "npm run build && changeset publish",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixielity/mapped-types.git"
  },
  "keywords": [
    "typescript",
    "mapped-types",
    "class-validator",
    "class-transformer",
    "dto",
    "validation",
    "transformation"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pixielity/mapped-types/issues"
  },
  "homepage": "https://github.com/pixielity/mapped-types#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "peerDependencies": {
    "class-transformer": ">=0.2.0",
    "class-validator": ">=0.11.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependenciesMeta": {
    "class-transformer": {
      "optional": true
    },
    "class-validator": {
      "optional": true
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}